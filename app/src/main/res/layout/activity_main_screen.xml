<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainScreen">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:src="@drawable/ellipse1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="249dp"
        android:layout_height="72dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Filipino Sign Language Recognition"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />


    <Button
        android:id="@+id/btnCamera"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginTop="244dp"
        android:layout_marginHorizontal="50dp"
        android:text="        Open the Camera"
        android:textSize="20dp"
        android:elevation="8dp"
        android:paddingVertical="15dp"
        android:paddingHorizontal="15dp"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_semibold"
        android:background="@drawable/bg_btnmain"
        android:drawableStart="@drawable/cam_icon"
        android:gravity="start|center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btnVocabBank"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/bg_btnmain"
        android:drawableStart="@drawable/book_icon"
        android:elevation="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="start|center_vertical"
        android:paddingHorizontal="15dp"
        android:paddingVertical="15dp"
        android:text="        Vocabulary Bank"
        android:textAllCaps="false"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCamera" />


    <Button
        android:id="@+id/btnAbout"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/bg_btnmain"
        android:drawableStart="@drawable/about_icon"
        android:elevation="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="start|center_vertical"
        android:paddingHorizontal="15dp"
        android:paddingVertical="15dp"
        android:text="            About the App"
        android:textAllCaps="false"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVocabBank" />

</androidx.constraintlayout.widget.ConstraintLayout>