<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainScreen">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="410dp"
        android:layout_height="210dp"
        android:src="@drawable/ellipse1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/settings"
        android:contentDescription="@string/settings_button_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="249dp"
        android:layout_height="72dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="72dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Filipino Sign Language Recognition"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewCamera"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="290dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnCamera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_btnmainbutton"
            android:drawableStart="@drawable/cam_icon"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="start|center_vertical"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:text="      Open the Camera"
            android:textAllCaps="false"
            android:textSize="20sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewVocabBank"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="45dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewCamera">

        <Button
            android:id="@+id/btnVocabBank"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_btnmainbutton"
            android:drawableStart="@drawable/book_icon"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="start|center_vertical"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:text="      Vocabulary Bank"
            android:textAllCaps="false"
            android:textSize="20dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewAbout"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="45dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewVocabBank">

        <Button
            android:id="@+id/btnAbout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_btnmainbutton"
            android:drawableStart="@drawable/about_icon"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="start|center_vertical"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:text="      About the App"
            android:textAllCaps="false"
            android:textSize="20dp" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
