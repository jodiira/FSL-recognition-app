<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#EAC43D"
    tools:context=".FslWordsDetails">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBackVbWords"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/arrow_left2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/wordTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="142dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="142dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:textSize="@dimen/_30ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/wordTextTagalogView"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="142dp"
            android:layout_marginTop="405dp"
            android:layout_marginEnd="142dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_22ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="520dp"
            android:background="#2A5C99">

            <ImageView
                android:id="@+id/smallRectBgDefinition"
                android:layout_width="101dp"
                android:layout_height="25dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/small_rounded_definition" />


            <TextView
                android:id="@+id/wordDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="37dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Definition"
                android:textStyle="italic"
                android:textColor="#000000"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/wordTextDescriptionView"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="142dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/smallRectBgExample"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="160dp"
                android:src="@drawable/small_rounded_example" />

            <TextView
                android:id="@+id/wordExampleSentenceView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="162dp"
                android:layout_marginStart="27dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Example Sentence"
                android:textStyle="italic"
                android:textColor="#000000"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/wordTextExampleView"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="200dp"
                android:layout_marginEnd="142dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="295dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/rounded_background"
            android:elevation="8dp">

            <ImageView
                android:id="@+id/whiteRectBg"
                android:layout_width="380dp"
                android:layout_height="290dp"
                android:layout_gravity="center"
                android:src="@drawable/bg_rectangle" />

            <VideoView
                android:id="@+id/wordVideoView"
                android:layout_width="365dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="19dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:layout_marginStart="65dp"
                android:layout_marginTop="245dp"
                android:src="@drawable/info" />

            <TextView
                android:id="@+id/touchTheVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="245dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Touch the video to pause and play!"
                android:textColor="#595959"
                android:textSize="@dimen/_10ssp"
                android:textStyle="italic" />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

